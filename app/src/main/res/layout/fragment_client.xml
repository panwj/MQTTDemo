<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/client_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_rectangle_line_radius5_blue"
        android:padding="8dp"
        android:textColor="@color/blue1"
        app:layout_constraintBottom_toBottomOf="@id/send"
        app:layout_constraintBottom_toTopOf="@id/edit"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_group_manager"
        android:layout_width="56dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/bg_rectangle_line_radius5_blue"
        android:gravity="center"
        android:text="群管理"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/client_status_tv"
        app:layout_constraintStart_toEndOf="@id/client_status_tv" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="message"
        app:layout_constraintBottom_toBottomOf="@id/send"
        app:layout_constraintEnd_toStartOf="@id/send"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/send"
        android:layout_width="56dp"
        android:layout_height="38dp"
        android:layout_margin="6dp"
        android:background="@drawable/bg_rectangle_line_radius5_blue"
        android:scaleType="centerInside"
        android:src="@drawable/ic_send"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>